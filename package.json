{
  "name": "farmaverse",
  "version": "1.0.0",
  "description": "Blockchain-Powered Farm-to-Fork Traceability for India's Agriculture",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:backend && npm run test:frontend",
    "test:contracts": "hardhat test",
    "compile:contracts": "hardhat compile",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "deploy:contracts": "hardhat run contracts/scripts/deploy.js",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "verify": "node scripts/verify-setup.js"
  },
  "workspaces": [
    "contracts",
    "backend",
    "frontend"
  ],
  "keywords": [
    "blockchain",
    "agriculture",
    "traceability",
    "polygon",
    "smart-contracts",
    "farm-to-fork",
    "india",
    "mango"
  ],
  "author": "Farmaverse Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "hardhat": "^2.26.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.0",
    "ethers": "^6.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
